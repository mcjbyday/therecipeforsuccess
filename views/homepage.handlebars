<!-- Loop over each object in the meals array -->
{{#each meals as |meal| }}
<div class="row mb-4 meal">
  <div class="col-md-5">
    <h2>
      <a href="/meal/{{meal.id}}">{{meal.name}}</a>
    </h2>
    <p>Created by {{meal.user.name}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{meal.description}}
    </p>
  </div>
</div>
{{/each}}
